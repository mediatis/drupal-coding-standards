{
    "name": "example-vendor/drupal-example-module",
    "description": "Mediatis - Drupal Coding Standards - Example Module",
    "license": "GPL-2.0-or-later",
    "type": "drupal-module",
    "keywords": [
        "coding",
        "standards",
        "php",
        "drupal",
        "example"
    ],
    "authors": [
        {
            "name": "Mediatis AG",
            "email": "info@mediatis.de",
            "homepage": "https://www.mediatis.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.mediatis.de",
    "require": {
        "php": "^8.2",
        "drupal/core": "^10 || ^11"
    },
    "require-dev": {
        "mediatis/drupal-coding-standards": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\example_module\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\example_module\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "project-root": ".Build/",
                "web-root": ".Build/web/"
            }
        }
    },
    "scripts": {
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ],
        "ci:composer": [
            "@ci:composer:static"
        ],
        "ci:composer:normalize": "@composer normalize --no-check-lock --dry-run",
        "ci:composer:psr-verify": "@composer dumpautoload --optimize --strict-psr",
        "ci:composer:static": [
            "@ci:composer:validate",
            "@ci:composer:psr-verify",
            "@ci:composer:normalize"
        ],
        "ci:composer:validate": "@composer validate --strict",
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:php": [
            "@ci:php:static",
            "@ci:php:dynamic"
        ],
        "ci:php:cs-fixer": ".Build/bin/php-cs-fixer fix --config .php-cs-fixer.php -v --dry-run --using-cache no --diff src tests",
        "ci:php:dynamic": [
            "@ci:tests"
        ],
        "ci:php:lint": "find .*.php *.php src tests -name '*.php' -print0 | xargs -r -0 -n 1 -P 4 php -l",
        "ci:php:phpcs": ".Build/bin/phpcs",
        "ci:php:rector": ".Build/bin/rector --dry-run",
        "ci:php:stan": "php -d memory_limit=512M .Build/bin/phpstan --no-progress --no-interaction analyse",
        "ci:php:static": [
            "@ci:php:rector",
            "@ci:php:cs-fixer",
            "@ci:php:phpcs",
            "@ci:php:lint",
            "@ci:php:stan"
        ],
        "ci:static": [
            "@ci:composer:static",
            "@ci:php:static"
        ],
        "ci:tests": [
            "@ci:tests:unit",
            "@ci:tests:kernel",
            "@ci:tests:functional"
        ],
        "ci:tests:functional": ".Build/bin/phpunit -d memory_limit=228M --bootstrap .Build/vendor/autoload.php --testdox --colors=always tests/Functional/",
        "ci:tests:kernel": ".Build/bin/phpunit -d memory_limit=228M --bootstrap .Build/vendor/autoload.php --testdox --colors=always tests/Kernel/",
        "ci:tests:unit": ".Build/bin/phpunit -d memory_limit=228M --bootstrap .Build/vendor/autoload.php --testdox --colors=always tests/Unit/",
        "coding-standards:reset": [
            "./.Build/bin/mediatis-drupal-coding-standards-setup reset",
            "@fix:composer"
        ],
        "coding-standards:update": [
            "./.Build/bin/mediatis-drupal-coding-standards-setup",
            "@fix:composer"
        ],
        "fix": [
            "@fix:composer",
            "@fix:php"
        ],
        "fix:composer": [
            "@fix:composer:normalize"
        ],
        "fix:composer:normalize": "@composer normalize --no-check-lock",
        "fix:php": [
            "@fix:php:rector",
            "@fix:php:phpcs",
            "@fix:php:cs-fixer"
        ],
        "fix:php:cs-fixer": ".Build/bin/php-cs-fixer fix --config .php-cs-fixer.php src tests",
        "fix:php:phpcs": ".Build/bin/phpcbf || true",
        "fix:php:rector": ".Build/bin/rector"
    },
    "scripts-descriptions": {
        "ci": "Runs all dynamic and static code checks.",
        "ci:composer": "Runs all dynamic and static composer checks",
        "ci:composer:normalize": "Checks the composer.json.",
        "ci:composer:psr-verify": "Verifies PSR-4 namespace correctness.",
        "ci:composer:static": "Runs all static composer checks.",
        "ci:composer:validate": "Validates the composer.json",
        "ci:dynamic": "Runs all dynamic tests.",
        "ci:php": "Runs all static checks for the PHP files.",
        "ci:php:cs-fixer": "Checks the code style with the PHP Coding Standards Fixer (PHP-CS-Fixer).",
        "ci:php:dynamic": "Run all PHP tests",
        "ci:php:lint": "Lints the PHP files for syntax errors.",
        "ci:php:phpcs": "Checks the code style with PHP_CodeSniffer (Drupal standard).",
        "ci:php:rector": "Checks the code style with Drupal Rector.",
        "ci:php:stan": "Checks the PHP types using PHPStan.",
        "ci:php:static": "Runs all static code checks on PHP code.",
        "ci:tests:functional": "Runs all PHPUnit functional tests.",
        "ci:tests:kernel": "Runs all PHPUnit kernel tests.",
        "ci:tests:unit": "Runs all PHPUnit unit tests.",
        "ci:static": "Runs all static code checks (syntax, style, types).",
        "ci:tests": "Runs all PHPUnit tests (unit, kernel and functional).",
        "coding-standards:reset": "Resets all coding standard configuration files to their default state.",
        "coding-standards:update": "Updates coding standard configuration files from the drupal-coding-standards package.",
        "fix": "Runs all fixers.",
        "fix:composer": "Runs all fixers for the composer.json file.",
        "fix:composer:normalize": "Normalizes composer.json file content.",
        "fix:php": "Runs all fixers for the PHP code.",
        "fix:php:cs-fixer": "Fixes the code style with PHP-CS-Fixer.",
        "fix:php:phpcs": "Fixes the code style with PHP_CodeSniffer (phpcbf).",
        "fix:php:rector": "Fixes code structures with Drupal Rector."
    }
}